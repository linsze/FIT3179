{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 430,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/human_development.csv"
  },
  "transform": [
    {
      "filter": {
        "and": [
          {"field": "Gross National Income (GNI) per Capita", "valid": true},
          {"field": "Life Expectancy at Birth", "valid": true}
        ]
      }
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "bin": {"maxbins": 40},
      "field": "Gross National Income (GNI) per Capita",
      "title": "Gross National Income (GNI) per Capita",
      "type": "quantitative",
      "axis": {"format": "1s"}
    },
    "y": {
      "bin": {"maxbins": 30},
      "field": "Life Expectancy at Birth",
      "title": "Life Expectancy at Birth",
      "type": "quantitative"
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "Asia",
          "Africa",
          "Europe",
          "North America",
          "South America",
          "Oceania"
        ],
        "range": [
          "#d95f0e",
          "#1f78b4",
          "#7570b3",
          "#ffff1a",
          "#4daf4a",
          "#c51b8a"
        ]
      }
    },
    "size": {
      "field": "Human Development Index (HDI)",
      "type": "quantitative",
      "title": "HDI",
      "scale": {
        "type": "threshold",
        "domain": [0.5, 0.65, 0.85],
        "range": [30, 100, 240, 500]
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {
        "field": "Human Development Index (HDI)",
        "type": "quantitative",
        "title": "HDI"
      },
      {"field": "Life Expectancy at Birth", "type": "quantitative"},
      {
        "field": "Gross National Income (GNI) per Capita",
        "type": "quantitative"
      },
      {
        "field": "Expected Years of Education",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "Mean Years of Education",
        "type": "quantitative",
        "format": ","
      }
    ]
  },
  "config": {"view": {"stroke": "transparent"}}
}