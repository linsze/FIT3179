{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background": "#ecd9c6",
  "padding": 30,
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent: "
      }
    }
  ],
  "spacing": 70,
  "vconcat": [
    {
      "width": 430,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/human_development.csv"
      },
      "transform": [
        {
          "filter": {
            "and": [
              {"field": "Gross National Income (GNI) per Capita", "valid": true},
              {"field": "Life Expectancy at Birth", "valid": true}
            ]
          }
        }
      ],
      "layer": [
        {
          "selection": {"grid": {"type": "interval", "bind": "scales"}},
          "mark": "circle",
          "encoding": {
            "x": {
              "bin": {"maxbins": 40},
              "field": "Gross National Income (GNI) per Capita",
              "title": "Gross National Income (GNI) per Capita",
              "type": "quantitative",
              "axis": {"format": "1s"}
            },
            "y": {
              "bin": {"maxbins": 30},
              "field": "Life Expectancy at Birth",
              "title": "Life Expectancy at Birth",
              "type": "quantitative"
            },
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Asia",
                  "Africa",
                  "Europe",
                  "North America",
                  "South America",
                  "Oceania"
                ],
                "range": [
                  "#d95f0e",
                  "#1f78b4",
                  "#7570b3",
                  "#ffff1a",
                  "#4daf4a",
                  "#c51b8a"
                ]
              }
            },
            "size": {
              "field": "Human Development Index (HDI)",
              "type": "quantitative",
              "title": "HDI",
              "scale": {
                "type": "threshold",
                "domain": [0.5, 0.65, 0.85],
                "range": [30, 100, 240, 500]
              }
            },
            "opacity": {
              "condition": {
                "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                "value": 0.6
              },
              "value": 0.1
            },
            "tooltip": [
              {"field": "Country", "type": "nominal"},
              {
                "field": "Human Development Index (HDI)",
                "type": "quantitative",
                "title": "HDI"
              },
              {"field": "Life Expectancy at Birth", "type": "quantitative"},
              {
                "field": "Gross National Income (GNI) per Capita",
                "type": "quantitative"
              },
              {
                "field": "Expected Years of Education",
                "type": "quantitative",
                "format": ","
              },
              {
                "field": "Mean Years of Education",
                "type": "quantitative",
                "format": ","
              }
            ]
          }
        },
        {
          "data": {
            "values": [
              {
                "x": 90000,
                "y": 70,
                "text": "Life expectancy of countries with higher"
              },
              {
                "x": 90000,
                "y": 68,
                "text": "income and HDI are generally greater"
              }
            ]
          },
          "mark": {"type": "text", "fontSize": 12},
          "encoding": {
            "detail": {"field": "text", "type": "nominal"},
            "x": {"field": "x", "type": "quantitative"},
            "y": {"field": "y", "type": "quantitative"},
            "opacity": {"value": 1},
            "text": {"field": "text"}
          }
        }
      ]
    },
    {
      "width": 400,
      "height": 250,
      "title": "Average Life Expectancy at Birth",
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/Life_Expectancy_at_Birth.csv"
      },
      "transform": [
        {
          "filter": {
            "field": "Continent",
            "oneOf": [
              "Asia",
              "Africa",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ]
          }
        },
        {"filter": {"field": "Gender", "oneOf": ["Male", "Female"]}},
        {
          "aggregate": [
            {
              "op": "mean",
              "field": "Life Expectancy at Birth",
              "as": "Mean_life"
            }
          ],
          "groupby": ["Continent", "Gender"]
        }
      ],
      "encoding": {
        "x": {
          "field": "Mean_life",
          "type": "quantitative",
          "title": "Average Life Expectancy (years)",
          "scale": {"domain": [58, 78]},
          "axis": null
        },
        "y": {
          "field": "Continent",
          "type": "nominal",
          "axis": {"offset": 5, "ticks": false, "domain": false, "title": ""}
        },
        "opacity": {
          "condition": {
            "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
            "value": 1
          },
          "value": 0.2
        }
      },
      "layer": [
        {
          "mark": {"type": "line", "strokeWidth": 3},
          "encoding": {
            "detail": {"field": "Continent", "type": "nominal"},
            "color": {"value": "#caaaa3"}
          }
        },
        {
          "mark": {"type": "point", "filled": true},
          "encoding": {
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Male", "Female"],
                "range": ["#b35900", "#645699"]
              },
              "title": "Gender"
            },
            "size": {"value": 400},
            "opacity": {
              "condition": {
                "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                "value": 1
              },
              "value": 0.2
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "line-bottom",
            "dx": -10,
            "fontSize": 11,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {
              "field": "Mean_life",
              "type": "quantitative",
              "format": ".1f"
            },
            "color": {"value": "black"}
          }
        }
      ]
    },
    {
      "title": {
        "text": "Actual vs Expected Years of Education",
        "anchor": "middle"
      },
      "spacing": 10,
      "width": 170,
      "height": 23,
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/Years_of_Education.csv"
      },
      "transform": [
        {
          "calculate": "{'Expected': 'ðŸ“˜', 'Actual': 'ðŸ“™'}[datum['Education']]",
          "as": "Edu_emoji"
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "groupby": ["Continent", "Education"]
        },
        {"filter": "datum['Edu_emoji']"}
      ],
      "mark": {"type": "text", "baseline": "middle"},
      "encoding": {
        "x": {"field": "rank", "type": "ordinal", "axis": null},
        "column": {
          "field": "Education",
          "header": {"title": "", "labelFontSize": 13, "labelFontWeight": 600},
          "spacing": 50
        },
        "row": {
          "field": "Continent",
          "header": {
            "labelAngle": 0,
            "labelAlign": "left",
            "title": "",
            "labelFontSize": 12,
            "labelFontWeight": 600,
            "labelColor": "#595959"
          }
        },
        "text": {"field": "Edu_emoji", "type": "nominal"},
        "size": {"value": 23},
        "opacity": {
          "condition": {
            "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
            "value": 0.8
          },
          "value": 0.2
        },
        "tooltip": [
          {"field": "Continent", "type": "ordinal"},
          {
            "field": "Years of Education",
            "type": "quantitative",
            "format": ".1f"
          }
        ]
      }
    }
  ],
  "config": {
    "legend": {
      "orient": "left",
      "labelFontSize": 11.2,
      "labelColor": "#262626",
      "titleFontSize": 12,
      "titleColor": "#262626",
      "rowPadding": 5,
      "columnPadding": 0
    },
    "axis": {
      "labelFontSize": 12,
      "labelFontWeight": 600,
      "labelColor": "#595959",
      "titleColor": "#333333",
      "titleFontWeight": 600,
      "titleFontSize": 12
    },
    "title": {
      "color": "#0d0d0d", 
      "fontSize": 14, 
      "fontWeight": 600
    }
  },
  "resolve": {"scale": {"color": "independent"}}
}
