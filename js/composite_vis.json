{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background": "#ecd9c6",
  "padding": 30,
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null, "Africa", "Asia", "Europe", "North America", "Oceania", "South America"
        ],
        "labels": [
        "All", "Africa", "Asia", "Europe", "North America", "Oceania", "South America"
        ],
        "name": "Continent: "
      }
    }
  ],
  "spacing": 50,
  "vconcat": [
    {
      "width": 450,
      "height": 300,
      "title": "Life Expectancy vs Income per capita",
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/human_development.csv"
      },
      "encoding": {
        "x": {
          "field": "Gross National Income (GNI) per Capita",
          "type": "quantitative",
          "scale": {"type": "sqrt", "domain": [1000, 160000]}
        },
        "y": {
          "field": "Life Expectancy at Birth",
          "type": "quantitative",
          "scale": {"type": "linear", "domain": [45, 85]}
        },
        "opacity": {
          "condition": {
            "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
            "value": 0.6
          },
          "value": 0.1
        }
      },
      "layer": [
        {
          "mark": "circle",
          "encoding": {
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Asia",
                  "Africa",
                  "Europe",
                  "North America",
                  "South America",
                  "Oceania"
                ],
                "range": [
                  "#d95f0e",
                  "#1f78b4",
                  "#7570b3",
                  "#ffff1a",
                  "#4daf4a",
                  "#c51b8a"
                ]
              }
            },
            "size": {
              "field": "Human Development Index (HDI)",
              "type": "quantitative",
              "title": "HDI",
              "scale": {"type": "threshold", "domain": [0.5, 0.65, 0.85]}
            },
            "tooltip": [
              {"field": "Country", "type": "nominal"},
              {
                "field": "Life Expectancy at Birth",
                "type": "quantitative",
                "format": ",",
                "title": "Life Expectancy"
              },
              {
                "field": "Gross National Income (GNI) per Capita",
                "type": "quantitative",
                "format": ",",
                "title": "GNI per Capita"
              },
              {
                "field": "Human Development Index (HDI)",
                "type": "quantitative",
                "title": "HDI"
              },
              {
                "field": "Expected Years of Education",
                "type": "quantitative",
                "format": ","
              },
              {
                "field": "Mean Years of Education",
                "type": "quantitative",
                "format": ","
              }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 13,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "Country", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['Country'] == 'Japan' || datum['Country'] == 'Singapore' || datum['Country'] == 'Qatar' || datum['Country'] == 'Nigeria' || datum['Country'] == 'United States' || datum['Country'] == 'Maldives' || datum['Country'] == 'Saudi Arabia'",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
              {"field": "Country", "type": "nominal"},
              {
                "field": "Life Expectancy at Birth",
                "type": "quantitative",
                "format": ",",
                "title": "Life Expectancy"
              },
              {
                "field": "Gross National Income (GNI) per Capita",
                "type": "quantitative",
                "format": ",",
                "title": "GNI per Capita"
              },
              {
                "field": "Human Development Index (HDI)",
                "type": "quantitative",
                "title": "HDI"
              },
              {
                "field": "Expected Years of Education",
                "type": "quantitative",
                "format": ","
              },
              {
                "field": "Mean Years of Education",
                "type": "quantitative",
                "format": ","
              }
            ]
          }
        }
      ]
    },
    {
      "width": 450,
      "height": 250,
      "title": "Average Life Expectancy at Birth",
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/Life_Expectancy_at_Birth.csv"
      },
      "transform": [
        {
          "filter": {
            "field": "Continent",
            "oneOf": [
              "Asia",
              "Africa",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ]
          }
        },
        {"filter": {"field": "Gender", "oneOf": ["Male", "Female"]}},
        {
          "aggregate": [
            {"op": "mean", "field": "Life Expectancy at Birth", "as": "Mean_life"}
          ],
          "groupby": ["Continent", "Gender"]
        }
      ],
      "encoding": {
        "x": {
          "field": "Mean_life",
          "type": "quantitative",
          "title": "Average Life Expectancy (years)",
          "scale": {"domain": [58, 78]},
          "axis": null
        },
        "y": {
          "field": "Continent",
          "type": "nominal",
          "axis": {"offset": 5, "ticks": false, "minExtent": 70, "domain": false}
        },
        "opacity": {
          "condition": {
            "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
            "value": 1
          },
          "value": 0.2
        }
      },
      "layer": [
        {
          "mark": {"type": "line", "strokeWidth": 3},
          "encoding": {
            "detail": {"field": "Continent", "type": "nominal"},
            "color": {"value": "#caaaa3"}
          }
        },
        {
          "mark": {"type": "point", "filled": true},
          "encoding": {
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Male", "Female"],
                "range": ["#b35900", "#645699"]
              },
              "title": "Gender"
            },
            "size": {"value": 400},
            "opacity": {
              "condition": {
                "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                "value": 1
              },
              "value": 0.2
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "line-bottom",
            "dx": -10,
            "fontSize": 11,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "Mean_life", "type": "quantitative", "format": ".1f"},
            "color": {"value": "black"}
          }
        }
      ]
    },
    {
      "title": {
        "text": "Average Gross National Income (GNI)",
        "anchor": "middle"
      },
      "data": { "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/GNI.csv"},
      "transform": [
        {"filter": "datum['Estimated Gross National Income per Capita'] > 0"}
      ],
      "hconcat": [
        {
          "width": 150,
          "height": 150,
          "transform": [{
              "filter": {"field": "Gender", "equal": "Male"}
          }],
          "title": "Male",
          "layer": [
            {
              "mark": "bar",
              "encoding": {
                "y": {
                  "field": "Continent", "axis": null
                },
                "x": {
                  "aggregate": "mean", "field": "Estimated Gross National Income per Capita",
                  "title": "Estimated GNI",
                  "axis": null,
                  "sort": "descending",
                  "scale": {"domain": [0, 40000]}
                },
                "color": {
                  "field": "Gender",
                  "scale": {"range": ["#645699", "#b35900"]},
                  "legend": null
                },
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                }
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": -100,
                "fontSize": 13,
                "fontStyle": "italic"
              },
              "encoding": {
                "y": {
                  "field": "Continent", "axis": null
                },
                "text": {
                  "aggregate": "mean",
                  "field": "Estimated Gross National Income per Capita",
                  "type": "quantitative", 
                  "format": ".1s"
                },
                "color": {"value": "black"},
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                }
              }
            }
          ]
        }, 
        {
          "width": 110,
          "height": 150,
          "view": {"stroke": null},
          "mark": {
            "type": "text",
            "fontSize": 14
          },
          "encoding": {
            "y": {"field": "Continent", "type": "nominal", "axis": null},
            "text": {
              "field": "Continent", 
              "type": "nominal"
            },
            "opacity": {"value": 0.1}
          }

        }, 
        {
          "width": 150,
          "height": 150,
          "transform": [{
            "filter": {"field": "Gender", "equal": "Female"}
          }],
          "title": "Female",
          "layer": [
            {
              "mark": "bar",
              "encoding": {
                "y": {
                  "field": "Continent", "title": null,
                  "axis": null, "sort": "descending"
                },
                "x": {
                  "aggregate": "mean", "field": "Estimated Gross National Income per Capita",
                  "title": "Estimated GNI",
                  "axis": null,
                  "scale": {"domain": [0, 40000]}
                },
                "color": {
                  "field": "Gender",
                  "legend": null
                },
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                }
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": 80,
                "fontSize": 13,
                "fontStyle": "italic"
              },
              "encoding": {
                "y": {
                  "field": "Continent", "axis": null
                },
                "text": {
                  "aggregate": "mean",
                  "field": "Estimated Gross National Income per Capita",
                  "type": "quantitative", 
                  "format": ".1s"
                },
                "color": {"value": "black"},
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "legend": {
      "orient": "left"
    }
  },
  "resolve": {
    "scale": {
      "color": "independent"
    }
  }
}
