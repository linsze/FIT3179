{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background": "#ecd9c6",
  "padding": 30,
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent: "
      }
    }
  ],
  "spacing": 70,
  "vconcat": [
    {
      "width": 430,
      "height": 300,
      "title": "Life Expectancy vs Income per capita",
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/human_development.csv"
          },
          "encoding": {
            "x": {
              "field": "Gross National Income (GNI) per Capita",
              "type": "quantitative",
              "scale": {"type": "sqrt", "domain": [1000, 160000]}
            },
            "y": {
              "field": "Life Expectancy at Birth",
              "type": "quantitative",
              "scale": {"type": "linear", "domain": [45, 85]}
            },
            "opacity": {
              "condition": {
                "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                "value": 0.5
              },
              "value": 0.1
            }
          },
          "layer": [
            {
              "selection": {"grid": {"type": "interval", "bind": "scales"}},
              "mark": "circle",
              "encoding": {
                "color": {
                  "field": "Continent",
                  "type": "nominal",
                  "scale": {
                  "scheme": "dark2"
                  }
                },
                "size": {
                  "field": "Human Development Index (HDI)",
                  "type": "quantitative",
                  "title": "HDI",
                  "scale": {
                    "type": "threshold", 
                    "domain": [0.5, 0.65, 0.85],
                    "range": [30, 100, 240, 500]
                  }
                },
                "tooltip": [
                  {"field": "Country", "type": "nominal"},
                  {
                    "field": "Life Expectancy at Birth",
                    "type": "quantitative",
                    "format": ",",
                    "title": "Life Expectancy"
                  },
                  {
                    "field": "Gross National Income (GNI) per Capita",
                    "type": "quantitative",
                    "format": ",",
                    "title": "GNI per Capita"
                  },
                  {
                    "field": "Human Development Index (HDI)",
                    "type": "quantitative",
                    "title": "HDI"
                  },
                  {
                    "field": "Expected Years of Education",
                    "type": "quantitative",
                    "format": ","
                  },
                  {
                    "field": "Mean Years of Education",
                    "type": "quantitative",
                    "format": ","
                  }
                ]
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 13,
                "fontStyle": "italic"
              },
              "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                  "condition": {
                    "test": "datum['Country'] == 'Japan' || datum['Country'] == 'Singapore' || datum['Country'] == 'Qatar' || datum['Country'] == 'Nigeria' || datum['Country'] == 'United States' || datum['Country'] == 'Maldives' || datum['Country'] == 'Saudi Arabia'",
                    "value": 1
                  },
                  "value": 0
                },
                "tooltip": [
                  {"field": "Country", "type": "nominal"},
                  {
                    "field": "Life Expectancy at Birth",
                    "type": "quantitative",
                    "format": ",",
                    "title": "Life Expectancy"
                  },
                  {
                    "field": "Gross National Income (GNI) per Capita",
                    "type": "quantitative",
                    "format": ",",
                    "title": "GNI per Capita"
                  },
                  {
                    "field": "Human Development Index (HDI)",
                    "type": "quantitative",
                    "title": "HDI"
                  },
                  {
                    "field": "Expected Years of Education",
                    "type": "quantitative",
                    "format": ","
                  },
                  {
                    "field": "Mean Years of Education",
                    "type": "quantitative",
                    "format": ","
                  }
                ]
              }
            }
          ]
        },
        {
          "data": {
            "values": [
              {
                "x": 20,
                "y": 7,
                "text": "Life expectancy of countries with higher"
              },
              {
                "x": 20,
                "y": 5,
                "text": "income and HDI are generally greater"
              },
              {
                "x": 30,
                "y": 42,
                "text": ""
              }
            ]
          },
          "mark": {"type": "text", "fontSize": 12},
          "encoding": {
            "detail": {"field": "text", "type": "nominal"},
            "x": {
              "field": "x", 
              "type": "quantitative",
              "scale": {
                "rangeMax": 450
              },
              "axis": null
            },
            "y": {
              "field": "y", 
              "type": "quantitative",
              "axis": null
            },
            "opacity": {"value": 1},
            "text": {"field": "text"}
          }
        }
      ],
      "resolve": {
        "scale": {
          "x": "independent",
          "y": "independent"
        }
      }
    },
    {
      "width": 400,
      "height": 250,
      "title": "Average Life Expectancy at Birth",
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/Life_Expectancy_at_Birth.csv"
      },
      "transform": [
        {
          "filter": {
            "field": "Continent",
            "oneOf": [
              "Asia",
              "Africa",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ]
          }
        },
        {"filter": {"field": "Gender", "oneOf": ["Male", "Female"]}},
        {
          "aggregate": [
            {
              "op": "mean",
              "field": "Life Expectancy at Birth",
              "as": "Mean_life"
            }
          ],
          "groupby": ["Continent", "Gender"]
        }
      ],
      "encoding": {
        "x": {
          "field": "Mean_life",
          "type": "quantitative",
          "title": "Average Life Expectancy (years)",
          "scale": {"domain": [58, 78]},
          "axis": null
        },
        "y": {
          "field": "Continent",
          "type": "nominal",
          "axis": {"offset": 5, "ticks": false, "domain": false, "title": ""}
        },
        "opacity": {
          "condition": {
            "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
            "value": 1
          },
          "value": 0.2
        }
      },
      "layer": [
        {
          "mark": {"type": "line", "strokeWidth": 3},
          "encoding": {
            "detail": {"field": "Continent", "type": "nominal"},
            "color": {"value": "#caaaa3"}
          }
        },
        {
          "mark": {"type": "point", "filled": true},
          "encoding": {
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Male", "Female"],
                "range": ["#b35900", "#645699"]
              },
              "title": "Gender"
            },
            "size": {"value": 400},
            "opacity": {
              "condition": {
                "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                "value": 1
              },
              "value": 0.2
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "line-bottom",
            "dx": -10,
            "fontSize": 11,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {
              "field": "Mean_life",
              "type": "quantitative",
              "format": ".1f"
            },
            "color": {"value": "black"}
          }
        }
      ]
    },
    {
      "title": {
        "text": "Actual vs Expected Years of Education",
        "anchor": "middle"
      },
      "spacing": 10,
      "width": 170,
      "height": 23,
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/Years_of_Education.csv"
      },
      "transform": [
        {
          "calculate": "{'Expected': 'ðŸ“˜', 'Actual': 'ðŸ“™'}[datum['Education']]",
          "as": "Edu_emoji"
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "groupby": ["Continent", "Education"]
        },
        {"filter": "datum['Edu_emoji']"}
      ],
      "mark": {"type": "text", "baseline": "middle"},
      "encoding": {
        "x": {"field": "rank", "type": "ordinal", "axis": null},
        "column": {
          "field": "Education",
          "header": {"title": "", "labelFontSize": 13, "labelFontWeight": 600},
          "spacing": 50
        },
        "row": {
          "field": "Continent",
          "header": {
            "labelAngle": 0,
            "labelAlign": "left",
            "title": "",
            "labelFontSize": 12,
            "labelFontWeight": 600,
            "labelColor": "#595959"
          }
        },
        "text": {"field": "Edu_emoji", "type": "nominal"},
        "size": {"value": 23},
        "opacity": {
          "condition": {
            "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
            "value": 0.8
          },
          "value": 0.2
        },
        "tooltip": [
          {"field": "Continent", "type": "ordinal"},
          {
            "field": "Years of Education",
            "type": "quantitative",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "title": {
        "text": "Average Gross National Income (GNI)",
        "anchor": "middle"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/GNI.csv"
      },
      "transform": [
        {"filter": "datum['Estimated Gross National Income per Capita'] > 0"}
      ],
      "hconcat": [
        {
          "width": 150,
          "height": 150,
          "transform": [{"filter": {"field": "Gender", "equal": "Male"}}],
          "title": {"text": "Male", "fontSize": 13},
          "layer": [
            {
              "mark": "bar",
              "encoding": {
                "y": {"field": "Continent", "axis": null},
                "x": {
                  "aggregate": "mean",
                  "field": "Estimated Gross National Income per Capita",
                  "title": "Estimated GNI",
                  "axis": null,
                  "sort": "descending",
                  "scale": {"domain": [0, 40000]}
                },
                "color": {
                  "field": "Gender",
                  "scale": {"range": ["#645699", "#b35900"]},
                  "legend": null
                },
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                },
                "tooltip": [
                  {"field": "Continent", "type": "ordinal"},
                  {
                    "field": "Estimated Gross National Income per Capita",
                    "aggregate": "mean",
                    "title": "Mean GNI per Capita",
                    "type": "quantitative",
                    "format": ".2f"
                  }
                ]
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": -80,
                "fontSize": 13,
                "fontStyle": "italic"
              },
              "encoding": {
                "y": {"field": "Continent", "axis": null},
                "text": {
                  "aggregate": "mean",
                  "field": "Estimated Gross National Income per Capita",
                  "type": "quantitative",
                  "format": ".1s"
                },
                "color": {"value": "black"},
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                }
              }
            }
          ]
        },
        {
          "width": 60,
          "height": 150,
          "mark": {
            "type": "text",
            "fontSize": 13,
            "color": "#737373",
            "opacity": 0.3
          },
          "encoding": {
            "y": {"field": "Continent", "type": "nominal", "axis": null},
            "text": {"field": "Continent", "type": "nominal"}
          }
        },
        {
          "width": 140,
          "height": 150,
          "transform": [{"filter": {"field": "Gender", "equal": "Female"}}],
          "title": {"text": "Female", "fontSize": 13},
          "layer": [
            {
              "mark": "bar",
              "encoding": {
                "y": {
                  "field": "Continent",
                  "title": null,
                  "axis": null,
                  "sort": "descending"
                },
                "x": {
                  "aggregate": "mean",
                  "field": "Estimated Gross National Income per Capita",
                  "title": "Estimated GNI",
                  "axis": null,
                  "scale": {"domain": [0, 40000]}
                },
                "color": {"field": "Gender", "legend": null},
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                },
                "tooltip": [
                  {"field": "Continent", "type": "ordinal"},
                  {
                    "field": "Estimated Gross National Income per Capita",
                    "aggregate": "mean",
                    "title": "Mean GNI per Capita",
                    "type": "quantitative",
                    "format": ".2f"
                  }
                ]
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": 40,
                "fontSize": 13,
                "fontStyle": "italic"
              },
              "encoding": {
                "y": {"field": "Continent", "axis": null},
                "text": {
                  "aggregate": "mean",
                  "field": "Estimated Gross National Income per Capita",
                  "type": "quantitative",
                  "format": ".1s"
                },
                "color": {"value": "black"},
                "opacity": {
                  "condition": {
                    "test": "Continent_selection == null || datum['Continent'] == Continent_selection",
                    "value": 1
                  },
                  "value": 0.2
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "legend": {
      "orient": "left",
      "labelFontSize": 11.2,
      "labelColor": "#262626",
      "titleFontSize": 12,
      "titleColor": "#262626",
      "rowPadding": 5,
      "columnPadding": 0
    },
    "axis": {
      "labelFontSize": 12,
      "labelFontWeight": 600,
      "labelColor": "#595959",
      "titleColor": "#333333",
      "titleFontWeight": 600,
      "titleFontSize": 12
    },
    "title": {
      "color": "#0d0d0d", 
      "fontSize": 14, 
      "fontWeight": 600
    }
  },
  "resolve": {"scale": {"color": "independent"}}
}
