{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background": "#ecd9c6",
  "width": 550,
  "height": 400,
  "title": {"text": "Average Gross National Income (GNI)"},
  "data": {
    "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/GNI.csv"
  },
  "transform": [
    {"filter": "datum['Estimated Gross National Income per Capita'] > 0"}
  ],
  "layer": [
    {
      "selection": {
        "Gender_select": {
          "type": "single", 
          "fields": ["Gender"], "bind": "legend"
        } 
      },
      "mark": {"type": "arc", "innerRadius": 0, "stroke": "#999999"},
      "transform": [
        {
          "aggregate": [
            {
              "op": "mean",
              "field": "Estimated Gross National Income per Capita",
              "as": "Mean GNI"
            }
          ],
          "groupby": ["Continent", "Gender"]
        }
      ],
      "encoding": {
        "theta": {"field": "Continent", "stack": true},
        "radius": {
          "field": "Mean GNI",
          "stack": true,
          "scale": {"type": "linear"}
        },
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {"range": ["#FFD85C", "#76528BFF"]}
        },
        "opacity": {
          "condition": {
            "selection": "Gender_select",
            "value": 0.9
          },
          "value": 0.1
        },
        "tooltip": [
          {"field": "Continent", "type": "nominal"},
          {"field": "Gender", "type": "nominal"},
          {"field": "Mean GNI", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 13,
        "color": "#161515",
        "opacity": 0.3,
        "radius": 120
      },
      "encoding": {
        "text": {"field": "Continent", "type": "nominal"},
        "theta": {"field": "Continent", "stack": true}
      }
    },
    {
      "data": {
        "values": [
          {
            "x": -580,
            "y": 18,
            "text": "Europe has the greatest overall"
          },
          {"x": -555, "y": 16.5, "text": "income as well as for both genders."},
          {
            "x": 350,
            "y": 42,
            "text": "Africa appears to have income"
          },
          {"x": 360, "y": 40.5, "text": "level which is distinctively lower"},
          {"x": 350, "y": 39, "text": "than the rest of the continents."},
          {"x": 500, "y": 42, "text": ""}
        ]
      },
      "mark": {"type": "text", "fontSize": 13, "fontWeight": 600, "color": "#26004d"},
      "encoding": {
        "detail": {"field": "text", "type": "nominal"},
        "x": {
          "field": "x",
          "type": "quantitative",
          "axis": null
        },
        "y": {"field": "y", "type": "quantitative", "axis": null},
        "opacity": {"value": 1},
        "text": {"field": "text"}
      }
    }
  ],
  "resolve": {"scale": {"x": "independent", "y": "independent"}},
  "view": {"stroke": null},
  "config": {
    "legend": {
      "orient": "left",
      "titleFontSize": 12,
      "labelFontSize": 12
    },
    "title": {
      "color": "#0d0d0d", 
      "fontSize": 14, 
      "fontWeight": 600
    }
  }
}
