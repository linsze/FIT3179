{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 700,
  "height": 360,
  "data": {
    "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/js/ne_110m.topojson.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/linsze/FIT3179/master/data/human_development.csv"
        },
        "key": "Country",
        "fields": ["Human Development Index (HDI)"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Human Development Index (HDI)",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [0.55, 0.6, 0.8],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {
        "field": "Human Development Index (HDI)",
        "type": "quantitative",
        "title": "HDI"
      }
    ]
  },
  "config": {}
}